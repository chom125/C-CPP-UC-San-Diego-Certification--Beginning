#include <iostream>
#include <cstdlib>
using std::cin;
using std::cout;
using std::dec;
using std::hex;
using std::oct;

/*This Program takes a input decimal from a user and converts that decimal number to
 *Both a Hexadecimal and Octal Number. 
 *The program also has restrictions such as only use only 1 cout statement, 
 *use cin to obtain user input and use an use int to as type declaration 
 */
 
int main()
{
    //Prompt the User to Enter a Decimal Number 
    cout << "Enter any decimal integer numeric value: ";
    int var;
    cin >> var;
    cout << dec << var << " decimal = " << oct << var << " Octal = " <<  hex << var << " hexadecimal\n ";
    return EXIT_SUCCESS;
}
